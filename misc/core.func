spinner() {
  local chars="/-\|" i=0
  printf "\e[?25l" # Hide cursor
  while true; do
    printf "\r \e[36m%s\e[0m" "${chars:i++%${#chars}:1}"
    sleep 0.1
  done
}

msg_info() {
  local msg="$1"
  echo -ne " ${HOLD:-} ${YW}${msg}   "
  spinner &
  SPINNER_PID=$!
}

msg_ok() {
  [[ -n "$SPINNER_PID" ]] && kill "$SPINNER_PID" 2>/dev/null
  printf "\e[?25h" # Show cursor again
  local msg="$1"
  echo -e "${BFR:-} ${CM:-âœ”ï¸} ${GN}${msg}${CL}"
}

msg_error() {
  [[ -n "$SPINNER_PID" ]] && kill "$SPINNER_PID" 2>/dev/null
  printf "\e[?25h"
  local msg="$1"
  echo -e "${BFR:-} ${CROSS:-âœ–ï¸} ${RD}${msg}${CL}"
}

msg_warn() {
  [[ -n "$SPINNER_PID" ]] && kill "$SPINNER_PID" 2>/dev/null
  printf "\e[?25h"
  local msg="$1"
  echo -e "${BFR:-} ${INFO:-â„¹ï¸} ${YWB}${msg}${CL}"
}

msg_custom() {
  local symbol="${1:-"[*]"}"
  local color="${2:-"\e[36m"}"
  local msg="${3:-}"
  [[ -z "$msg" ]] && return
  [[ -n "$SPINNER_PID" ]] && kill "$SPINNER_PID" 2>/dev/null
  printf "\e[?25h"
  echo -e "${BFR:-} ${symbol} ${color}${msg}${CL:-\e[0m}"
}

