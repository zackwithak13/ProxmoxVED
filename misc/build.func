  TEMPLATE_STORAGE="$tpl_sel"
  CONTAINER_STORAGE="$ct_sel"
  msg_ok "Using Template-Storage â†’ $tpl_sel"
  msg_ok "Using Container-Storage â†’ $ct_sel"
